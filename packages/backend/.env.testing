# Chase Light Backend - Testing Environment Variables

# ==============================================
# 基本設定
# ==============================================
NODE_ENV=test
APP_STAGE=test
PORT=3002

# ==============================================
# テスト用データベース設定
# ==============================================
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=password
DB_NAME=chase_light_test
DB_SSL=false

# ==============================================
# Auth0 認証設定 (テスト用)
# ==============================================
# テスト環境では認証を無効化
DISABLE_AUTH=true

# ==============================================
# GitHub API設定 (テスト用)
# ==============================================
# テスト用のダミートークン（実際のAPIは呼ばない）
GITHUB_TOKEN=test_token_dummy

# ==============================================
# その他テスト設定
# ==============================================
LOG_LEVEL=error
SHOW_DETAILED_ERRORS=true