{
  "name": "backend",
  "type": "module",
  "scripts": {
    "build": "esbuild --bundle --outfile=./dist/index.js --platform=node --target=node20 ./src/index.ts",
    "dev": "tsx src/server.ts",
    "zip": "zip -j lambda.zip dist/index.js",
    "update": "aws lambda update-function-code --zip-file fileb://lambda.zip --function-name hello",
    "deploy": "run-s build zip update",
    "test": "run-s test:migrate && vitest run",
    "test:run": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "run-s test:migrate && vitest run --coverage",
    "test:migrate": "node scripts/test-migrate.js",
    "test:setup": "docker exec -i $(docker ps -q -f ancestor=public.ecr.aws/docker/library/postgres:15-bookworm) psql -U postgres -d postgres < ../../database/init/00-create-test-database.sql",
    "lint": "eslint src/ && tsc --noEmit",
    "lint:type": "tsc --noEmit",
    "format": "eslint src/ --fix && biome format --write",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:test": "tsx src/db/test-connection.ts",
    "repos:test": "tsx src/repositories/test-repositories.ts"
  },
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^22.10.2",
    "@types/pg": "^8.15.4",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "@vitest/coverage-v8": "^3.2.4",
    "drizzle-kit": "^0.31.1",
    "drizzle-seed": "^0.3.1",
    "esbuild": "^0.21.4",
    "eslint": "^9.15.0",
    "npm-run-all2": "^6.2.0",
    "tsx": "^4.20.3",
    "typescript": "^5.7.2",
    "vitest": "^3.2.2"
  },
  "dependencies": {
    "@hono/node-server": "^1.14.3",
    "@hono/zod-openapi": "1.0.0-beta.1",
    "@hono/zod-validator": "^0.7.0",
    "@octokit/rest": "^22.0.0",
    "@scalar/hono-api-reference": "^0.9.5",
    "dotenv": "^16.5.0",
    "drizzle-orm": "^0.44.2",
    "hono": "^4.7.11",
    "jsonwebtoken": "^9.0.2",
    "jwks-rsa": "^3.2.0",
    "pg": "^8.16.0",
    "uuidv7": "^1.0.2",
    "zod": "^3.25.51"
  }
}
