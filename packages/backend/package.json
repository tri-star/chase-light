{
  "name": "backend",
  "type": "module",
  "scripts": {
    "build": "esbuild --bundle --outfile=./dist/index.js --platform=node --target=node20 ./src/index.ts",
    "build:lambda": "node scripts/build-lambda.mjs",
    "dev": "tsx src/server.ts",
    "zip": "zip -j lambda.zip dist/index.js",
    "deploy": "run-s build zip update",
    "openapi:pull": "curl -fsSL -H 'Accept: application/json' http://localhost:3001/doc | jq > openapi.json",
    "test": "run-s test:migrate && vitest run",
    "test:run": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "run-s test:migrate && vitest run --coverage",
    "test:migrate": "node scripts/test-migrate.js",
    "lint": "eslint src/ && tsc --noEmit",
    "lint:type": "tsc --noEmit",
    "format": "eslint src/ --fix && biome format --write",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:test": "tsx src/db/test-connection.ts",
    "local:start": "node scripts/setup-local-environment.mjs",
    "local:stop": "node scripts/stop-local-environment.mjs",
    "local:restart": "run-s local:stop local:start",
    "poller": "tsx scripts/elasticmq-poller.ts",
    "poller:test": "tsx scripts/__tests__/poller-test.ts"
  },
  "devDependencies": {
    "@eslint/js": "^9.15.0",
    "@types/aws-lambda": "^8.10.150",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^22.10.2",
    "@types/pg": "^8.15.4",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "@vitest/coverage-v8": "^3.2.4",
    "drizzle-kit": "^0.31.1",
    "drizzle-seed": "^0.3.1",
    "esbuild": "^0.25.0",
    "eslint": "^9.15.0",
    "npm-run-all2": "^8.0.4",
    "tsx": "^4.20.3",
    "typescript": "^5.7.2",
    "vitest": "^3.2.2"
  },
  "dependencies": {
    "@aws-sdk/client-lambda": "^3.848.0",
    "@aws-sdk/client-sqs": "^3.848.0",
    "@aws-sdk/client-ssm": "^3.848.0",
    "@hono/node-server": "^1.14.3",
    "@hono/zod-openapi": "1.1.0",
    "@hono/zod-validator": "^0.7.0",
    "@octokit/rest": "^22.0.0",
    "@scalar/hono-api-reference": "^0.9.5",
    "dotenv": "^17.2.2",
    "drizzle-orm": "^0.44.2",
    "hono": "^4.9.7",
    "jsonwebtoken": "^9.0.2",
    "jwks-rsa": "^3.2.0",
    "openai": "^5.10.2",
    "pg": "^8.16.0",
    "uuidv7": "^1.0.2",
    "zod": "^4.0.5"
  }
}
