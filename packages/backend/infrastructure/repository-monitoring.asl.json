{
  "Comment": "Repository monitoring workflow - single step implementation",
  "StartAt": "ListDataSources",
  "States": {
    "ListDataSources": {
      "Type": "Task",
      "Resource": "arn:aws:states:::lambda:invoke",
      "Parameters": {
        "FunctionName": "arn:aws:lambda:us-east-1:123456789012:function:ListDataSourcesFunction",
        "Payload": {
          "sourceType": "github_repository"
        }
      },
      "ResultPath": "$.lambdaResult",
      "Next": "ProcessResults"
    },
    "ProcessResults": {
      "Type": "Pass",
      "Result": {
        "status": "completed",
        "timestamp.$": "$$.State.EnteredTime",
        "dataSourcesCount.$": "States.ArrayLength($.lambdaResult.Payload.dataSources)"
      },
      "End": true
    }
  }
}
