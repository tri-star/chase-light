{
  "name": "frontend",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "dev:debug": "nuxt dev --inspect",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "lint": "eslint . && nuxt typecheck && prettier . --check",
    "lint:type": "nuxt typecheck",
    "format": "eslint . --fix && prettier --write -c .prettierrc .",
    "build-storybook": "storybook build",
    "storybook": "storybook dev -p 6006",
    "test": "vitest run --reporter=verbose --watch=false",
    "test:stories": "test-storybook -c .storybook",
    "test:vrt": "playwright test -c playwright.storybook.config.ts",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "test:e2e:install": "playwright install",
    "generate:api": "orval",
    "generate:tailwind-theme": "tsx scripts/design-token-converter/convert.ts && prettier --write -c .prettierrc .",
    "predev": "pnpm generate:api && pnpm generate:tailwind-theme",
    "prebuild": "pnpm generate:api && pnpm generate:tailwind-theme"
  },
  "dependencies": {
    "@nuxt/eslint": "1.9.0",
    "@nuxt/icon": "1.13.0",
    "@nuxtjs/storybook": "^9.0.1",
    "dotenv": "^17.2.2",
    "eslint": "^9.28.0",
    "jsonwebtoken": "^9.0.2",
    "jwks-rsa": "^3.2.0",
    "nuxt": "^3.17.5",
    "nuxt-auth-utils": "0.5.20",
    "pg": "^8.16.0",
    "tailwindcss": "^4.1.14",
    "vue": "^3.5.16",
    "vue-router": "^4.5.1",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@faker-js/faker": "^10.0.0",
    "@nuxt/test-utils": "3.19.2",
    "@nuxtjs/tailwindcss": "7.0.0-beta.1",
    "@orval/msw": "^6.20.0",
    "@orval/zod": "^7.11.2",
    "@playwright/test": "^1.56.1",
    "@storybook/addon-docs": "9.0.5",
    "@storybook-vue/nuxt": "9.0.1",
    "@storybook/test-runner": "0.23.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/pg": "^8.15.4",
    "@vue/test-utils": "^2.4.6",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-storybook": "^9.1.8",
    "happy-dom": "^20.0.0",
    "memfs": "^4.37.1",
    "msw": "^2.10.4",
    "msw-storybook-addon": "^2.0.4",
    "nitropack": "2.12.7",
    "orval": "^7.13.0",
    "playwright-core": "^1.52.0",
    "prettier": "^3.3.3",
    "storybook": "9.0.5",
    "tsx": "^4.20.4",
    "vitest": "^3.2.2",
    "vue-tsc": "^3.1.1"
  },
  "msw": {
    "workerDirectory": [
      ".storybook/public"
    ]
  }
}
